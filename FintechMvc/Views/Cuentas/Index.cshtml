@model IEnumerable<FintechLibrary.DTOs.AccountDTO>

@{
    ViewData["Title"] = "Cuentas";
}

<h2>@ViewData["Title"]</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Número de Cuenta</th>
            <th>Balance</th>
            <th>Tipo de Cuenta</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var cuenta in Model)
        {
            <tr>
                <td>@cuenta.Id</td>
                <td>@cuenta.AccountNumber</td>
                <td>@cuenta.Balance</td>
                <td>@cuenta.AccountType</td>
                <td>
                    <!-- Aquí podrías agregar botones para Editar, Ver o Eliminar -->
                    <a href="@Url.Action("Edit", new { id = cuenta.Id })" class="btn btn-primary">Editar</a>
                    <a href="@Url.Action("Details", new { id = cuenta.Id })" class="btn btn-info">Ver</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No hay cuentas disponibles.</p>
}

<a id="createAccountButton" class="btn btn-success">Crear Nueva Cuenta</a>

<!-- Modal para Crear Cuenta -->
<div class="modal fade" id="createAccountModal" tabindex="-1" aria-labelledby="createAccountModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createAccountModalLabel">Crear Nueva Cuenta</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Formulario de Crear Cuenta -->
                <form id="createAccountForm">
                    <div class="form-group">
                        <label for="AccountNumber">Número de Cuenta</label>
                        <input type="text" id="AccountNumber" class="form-control" />
                        <span id="AccountNumberError" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="Balance">Balance</label>
                        <input type="number" id="Balance" class="form-control" />
                        <span id="BalanceError" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="AccountType">Tipo de Cuenta</label>
                        <select id="AccountType" class="form-control">
                            <option value="0">Ahorro</option>
                            <option value="1">Corriente</option>
                            <option value="2">Crédito</option>
                        </select>
                        <span id="AccountTypeError" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Crear Cuenta</button>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/site.js"></script>
}