@model CuentaViewModel

<h2>Crear Cuenta</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="AccountNumber">Número de Cuenta</label>
        <input type="text" asp-for="AccountNumber" class="form-control" />
        <span asp-validation-for="AccountNumber" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label for="Balance">Balance</label>
        <input type="number" asp-for="Balance" class="form-control" />
        <span asp-validation-for="Balance" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label for="AccountType">Tipo de Cuenta</label>
        <select asp-for="AccountType" class="form-control">
            <option value="0">Ahorro</option>
            <option value="1">Corriente</option>
            <option value="2">Crédito</option>
        </select>
        <span asp-validation-for="AccountType" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Crear Cuenta</button>
</form>

<!-- Mostrar mensajes -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">
        @TempData["ErrorMessage"]
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}